@model IEnumerable<Image_Crud_Application.Models.Employee>

@{
    ViewBag.Title = "Index";
}
@Html.Raw(TempData["CreateMessage"])

@Html.Raw(TempData["UpdateMessage"])
@Html.Raw(TempData["DeleteMessage"])
@Html.Raw(TempData["LoginSuccess"])
<h3>Welcome @Session["UserName"]</h3>
<h3>@Html.ActionLink("Logout","Logout", "Login")</h3>
@*<p>
        @Html.ActionLink("Create New", "Create",null ,new {@class="btn btn-success" })
    </p>*@
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_Path)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                <img src="@Url.Content(item.Image_Path)" height="100" width="100" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
